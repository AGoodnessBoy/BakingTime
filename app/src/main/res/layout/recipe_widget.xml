<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle"
            >
            <TextView
                android:id="@+id/widget_tv_recipe_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:text="@string/brownies"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/ic_chevron_left_white_24px"
                android:id="@+id/widget_bt_left"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_chevron_right_white_24px"
                android:id="@+id/widget_bt_right"
                />

        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/widget_lv_recipe_list"
            android:background="@color/colorPrimaryLight"
            />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorPrimaryLight"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:visibility="invisible"
        android:text="@string/empty_view_text"
        android:textSize="20sp" />



</LinearLayout>